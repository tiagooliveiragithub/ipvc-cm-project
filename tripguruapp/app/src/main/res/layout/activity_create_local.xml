<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="35dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="@color/light_letter"
    tools:context=".views.ui.CreateLocalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_hint"
        android:textSize="15sp"
        android:textColor="@color/light_letter"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="@string/name_hint"
        android:inputType="text" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_hint"
        android:textSize="15sp"
        android:textColor="@color/light_letter"/>

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="@string/description_hint"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="15sp"
        android:textColor="@color/light_letter"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginVertical="3dp"
            android:layout_marginEnd="4dp"
            android:text="Park"
            android:textSize="10dp"
            android:backgroundTint="@color/purple"
            app:cornerRadius="5dp"
            android:padding="10dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="3dp"
            android:text="Museum"
            android:textColor="#2E3A59"
            android:textSize="10dp"
            android:backgroundTint="@color/light"
            app:cornerRadius="5dp"
            android:padding="10dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="3dp"
            android:text="Restaurant"
            android:textColor="#2E3A59"
            android:textSize="10dp"
            android:backgroundTint="@color/light"
            app:cornerRadius="5dp"
            android:padding="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginVertical="3dp"
            android:layout_marginEnd="4dp"
            android:text="Bar"
            android:textColor="#2E3A59"
            android:textSize="10dp"
            android:backgroundTint="@color/light"
            app:cornerRadius="5dp"
            android:padding="10dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="3dp"
            android:text="Party"
            android:textColor="#2E3A59"
            android:textSize="10dp"
            android:backgroundTint="@color/light"
            app:cornerRadius="5dp"
            android:padding="10dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="3dp"
            android:text="Garden"
            android:textColor="#2E3A59"
            android:textSize="10sp"
            android:backgroundTint="@color/light"
            app:cornerRadius="5dp"
            android:padding="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precise Localization (optional)"
        android:textSize="15sp"
        android:textColor="@color/light_letter"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginVertical="3dp"
            android:layout_marginEnd="4dp"
            android:text="+ Coords"
            android:textColor="#2E3A59"
            android:textSize="10sp"
            android:backgroundTint="@color/light"
            app:cornerRadius="5dp"
            android:padding="10dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gallery (optional)"
        android:textSize="15sp"
        android:textColor="@color/light_letter"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginVertical="3dp"
            android:layout_marginEnd="4dp"
            android:text="+ Image"
            android:textColor="#2E3A59"
            android:textSize="10sp"
            android:backgroundTint="@color/light"
            app:cornerRadius="5dp"
            android:padding="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonCreateLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/createlocal_button_label"
        android:backgroundTint="@color/purple"
        app:cornerRadius="5dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/buttonDeleteLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deletelocal_button_label"
        android:backgroundTint="@color/red"
        app:cornerRadius="5dp"
        android:padding="10dp"/>

</LinearLayout>
